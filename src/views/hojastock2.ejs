$(document).ready(function () {
    var fecha = new Date
    var dia = fecha.getDate()
    var mes = fecha.getMonth()+1
    if (dia<=9){
        dia= '0'+dia
    }
    if (mes<=9){
        mes= '0'+mes
    }
    var anio = fecha.getFullYear()
    var fechacorta= `${anio}-${mes}-${dia}` 
    var fechacortaserie= `${anio}${mes}${dia}`
    $('.fechahoy').val(fechacorta);
    $('#fechaoculta').hide();

});
</script>